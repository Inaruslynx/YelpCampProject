<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" required>
            <div class="valid-feedback">
              Correct
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="form-control" id="location" name="campground[location]" required>
            <div class="valid-feedback">
              Correct
            </div>
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input name="campground[price]" id="price" type="number" class="form-control" aria-label="Amount (to the nearest dollar)" required>
                <!-- <span class="input-group-text">.00</span> -->
                <div class="valid-feedback">
                  Correct
                </div>
              </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="form-control" id="image" name="campground[image]" required>
            <div class="valid-feedback">
              Correct
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="form-control" id="description" name="campground[description]" required></textarea>
            <div class="valid-feedback">
              Correct
            </div>
          </div>
          <button class="btn mb-3 btn-success">Add Campground</button>
        </form>
        <a href="/campgrounds/" class="btn btn-primary mb-3">Back to Index</a>
    </div>
</div>
  
